<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RelativeLayout"
    android:touchscreenBlocksFocus="false"
    android:onClick="two"
    android:background="@drawable/image1">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/audio_start"
        android:background="@drawable/f_046_96"
        android:layout_above="@+id/seekbar"
        android:layout_alignStart="@+id/button7" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/audio_stop"
        android:background="@drawable/f_048_96"
        android:layout_alignTop="@+id/audio_start"
        android:layout_toEndOf="@+id/button2"
        android:onClick="stop" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:onClick="five"
        android:background="@drawable/midori"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button7"
        android:text="5" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button2"
        android:background="@drawable/midori"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="six"
        android:text="6" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button3"
        android:background="@drawable/midori"
        android:onClick="eight"
        android:layout_alignTop="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:text="8" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button4"
        android:background="@drawable/midori"
        android:onClick="one"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentStart="true"
        android:text="1" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button5"
        android:background="@drawable/midori"
        android:onClick="nine"
        android:layout_alignTop="@+id/button6"
        android:layout_toEndOf="@+id/button3"
        android:text="9" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button6"
        android:background="@drawable/midori"
        android:onClick="ten"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button5"
        android:text="10" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button7"
        android:background="@drawable/midori"
        android:onClick="four"
        android:layout_alignTop="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:text="4" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button8"
        android:background="@drawable/midori"
        android:onClick="thee"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button9"
        android:text="3" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button9"
        android:background="@drawable/midori"
        android:onClick="two"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button4"
        android:text="2" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button10"
        android:background="@drawable/midori"
        android:onClick="seven"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button2"
        android:text="7" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button6" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/text_view"
        android:layout_alignBottom="@+id/seekbar"
        android:layout_toEndOf="@+id/seekbar"
        android:textColor="#ffffff" />

</RelativeLayout>